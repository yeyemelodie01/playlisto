{% trans_default_domain 'Menu' %}
{% block menu %}
    {% set currentPage = app.request.get('_route') %}
    {% set linkClass = 'relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-50 text-gray-600 hover:text-gray-800 border-l-4 border-transparent hover:border-indigo-500 pr-6 no-underline' %}
    {% set activeClass = 'bg-indigo-100 border-indigo-500' %}
    <div class="min-h-screen flex flex-col flex-auto flex-shrink-0 antialiased bg-gray-50 text-gray-800">
        <div class="fixed flex flex-col top-0 left-0 w-64 bg-white h-full">
            <div class="overflow-y-auto overflow-x-hidden flex-grow">
                <ul class="flex flex-col py-4 space-y-1">
                    <li>
                        <a href="{{ path('back_index')}}" class="{{ linkClass }} {{ 'back_index' == app.request.get('_route') ? activeClass : ''}}">
                        <span class="inline-flex justify-center items-center ml-4">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                              <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
                              <path d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z" />
                            </svg>
                        </span>
                            <span class="ml-2 text-sm tracking-wide truncate">{{ 'home'|trans({}, 'Menu') }}</span>
                        </a>
                    </li>
                    <li>
                        {% import 'back/playlist/menu.html.twig' as menuPlaylist %}
                        {% set active = menuPlaylist.activeMenu()%}
                        <a href="{{ path('back_user_index')}}" class="{{ linkClass }} {{ active  ? activeClass : '' }}">
                        <span class="inline-flex justify-center items-center ml-4">
                           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                              <path fill-rule="evenodd" d="M19.952 1.651a.75.75 0 0 1 .298.599V16.303a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.403-4.909l2.311-.66a1.5 1.5 0 0 0 1.088-1.442V6.994l-9 2.572v9.737a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.402-4.909l2.31-.66a1.5 1.5 0 0 0 1.088-1.442V5.25a.75.75 0 0 1 .544-.721l10.5-3a.75.75 0 0 1 .658.122Z" clip-rule="evenodd" />
                            </svg>
                        </span>
                            <span class="ml-2 text-sm tracking-wide truncate">{{ 'playlist'|trans({}, 'Menu') }}</span>
                        </a>
                    </li>
                    <li>
                        {% import 'back/user/menu.html.twig' as menuUser %}
                        {% set active = menuUser.activeMenu()%}
                        <a href="{{ path('back_user_index')}}" class="{{ linkClass }} {{ active  ? activeClass : '' }}">
                        <span class="inline-flex justify-center items-center ml-4">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                              <path fill-rule="evenodd" d="M8.25 6.75a3.75 3.75 0 1 1 7.5 0 3.75 3.75 0 0 1-7.5 0ZM15.75 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM2.25 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM6.31 15.117A6.745 6.745 0 0 1 12 12a6.745 6.745 0 0 1 6.709 7.498.75.75 0 0 1-.372.568A12.696 12.696 0 0 1 12 21.75c-2.305 0-4.47-.612-6.337-1.684a.75.75 0 0 1-.372-.568 6.787 6.787 0 0 1 1.019-4.38Z" clip-rule="evenodd" />
                              <path d="M5.082 14.254a8.287 8.287 0 0 0-1.308 5.135 9.687 9.687 0 0 1-1.764-.44l-.115-.04a.563.563 0 0 1-.373-.487l-.01-.121a3.75 3.75 0 0 1 3.57-4.047ZM20.226 19.389a8.287 8.287 0 0 0-1.308-5.135 3.75 3.75 0 0 1 3.57 4.047l-.01.121a.563.563 0 0 1-.373.486l-.115.04c-.567.2-1.156.349-1.764.441Z" />
                            </svg>
                        </span>
                            <span class="ml-2 text-sm tracking-wide truncate">{{ 'user'|trans({}, 'Menu') }}</span>
                        </a>
                    </li>
                    {#
                        <li>
                            <a href="{{ path('logout') }}" class="{{ linkClass }}">
                                <span class="inline-flex justify-center items-center ml-4">
                                    <i class="fa-sharp fa-solid fa-door-open"></i>
                                </span>
                                <span class="ml-2 text-sm tracking-wide truncate">{{ 'logout'|trans({}, 'Menu') }}</span>
                            </a>
                        </li>
                    #}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}