{% extends 'back/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% use "back/_menu.html.twig" %}

{% block body %}
    <div class="grid h-screen w-screen grid-cols-6 grid-flow-row-dense overflow-hidden md:grid-cols-main">
        <aside class="flex flex-col w-64 h-screen overflow-y-auto bg-white border-r-2 border-black">
            {{ block('menu') }}
        </aside>
        <div class="w-full overflow-hidden col-span-5 md:col-span-full md:col-start-2 md:row-span-full md:row-start-2">
            <main class="h-full overflow-scroll px-4 pt-3">
                <div class="mt-3">{{ block('breadcrumb') }}</div>
                {% block content %}{% endblock %}
                {% block pagination %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
